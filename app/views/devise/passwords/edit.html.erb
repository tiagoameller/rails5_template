<h2>Canvia la teva contrasenya / Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3 field">
    <%= f.label :password, "New password", class: 'form-label' %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
    <% if @minimum_password_length %>
      <div class="form-text">
        <%= t('devise.passwords.minimum_chars', min: @minimum_password_length) %>
      </div>
    <% end %>
  </div>

  <div class="mb-3 field">
    <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="mb-3 actions">
    <%= button_tag class: 'btn btn-outline-success' do %>
      <%= bi_icon('pencil-fill') %>
      Canvia la meva contrasenya / Change my password
    <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
