<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3 field">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="mb-3 field">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 field form-check form-switch">
      <%= f.check_box :remember_me, class: 'form-check-input', role: :switch %>
      <%= f.label :remember_me, class: 'form-check-label', for: 'user_remember_me' %>
    </div>
  <% end %>

  <div class="actions">
    <%= button_tag class: 'btn btn-outline-success' do %>
      <%= bi_icon('box-arrow-in-right') %>
      Log in
    <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
