<%= form_with(model: brand, local: true) do |form| %>
  <% if brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 field">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control focus-me' %>
  </div>
  <div class="mb-3 field">
    <%= form.label :bod, class: 'form-label' %>
    <%= form.text_field :bod, class: 'form-control datepicker_input', data: { title: :bod } %>
  </div>
  <div class="mb-3">
    <div class="form-check form-switch">
      <%= form.check_box :yes_or_not, class: 'form-check-input', role: :switch %>
      <label class="form-check-label" for="brand_yes_or_not">Yes or Not</label>
    </div>
  </div>

  <%= render 'bottom_buttons', model: @brand %>

<% end %>
